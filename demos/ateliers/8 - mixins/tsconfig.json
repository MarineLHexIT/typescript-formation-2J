{
  "extends": "../../tsconfig.json",  // Extend root tsconfig
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*"],            // Include the demo-specific files
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist
}